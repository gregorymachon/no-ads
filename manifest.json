{
  "name": "No Feed Ads",
  "description": "Block promoted/sponsored in-feed ads in LinkedIn, Twitter and Facebook",
  "author": "Gregory Machon",
  "version": "1.0.4",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/feed/*"],
      "js": ["linkedin.js"]
    },
    {
        "matches": ["https://twitter.com/*"],
        "js": ["twitter.js"]
    },
    {
        "matches": ["https://www.facebook.com/*"],
        "js": ["facebook.js"]
    },
    {
        "matches": ["https://www.google.com/search*"],
        "js": ["google.js"]
    }
  ]
}
